    <%= f.label :chinese %><br />
    <%= f.cktext_area :chinese, :ckeditor => {:uiColor => "#AADC6E", :toolbar => "mini"} %>
  </div>
  <div class="field">
    <%= f.label :schinese %><br />
    <%= f.cktext_area :schinese, :ckeditor => {:uiColor => "#AADC6E", :toolbar => "mini"} %>
  </div>
  <div class="field">
    <%= f.label :english %><br />
    <%= f.cktext_area :english, :ckeditor => {:uiColor => "#AADC6E", :toolbar => "mini"} %>
  </div>
  <div class="field">
    <%= f.label :last_show %><br />
    <%= f.date_select :last_show %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
