<h1>Listing contents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Language</th>
    <th>Public</th>
    <th>Size</th>
    <th>Last Update</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%= content.name %></td>
    <td><%= content.language %></td>
    <td><%= content.public %></td>
    <td> <%= number_to_human_size(content.avatar.size) %></td>
    <td> <%= Time.at(content.avatar.updated_at) %></td>
    <td>|<%= link_to 'Show', content.avatar.url %></td>
    <td>|<%= link_to 'Edit', edit_content_path(content) %></td>
    <td>|<%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

